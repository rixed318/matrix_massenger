{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ],
      "zustand": [
        "./src/lib/zustand.ts"
      ],
      "zustand/vanilla": [
        "./src/lib/zustand.ts"
      ],
      "@playwright/test": [
        "./tests/e2e/playwrightTestStub.ts"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}